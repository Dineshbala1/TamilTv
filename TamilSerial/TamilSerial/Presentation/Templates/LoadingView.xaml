<?xml version="1.0" encoding="UTF-8" ?>
<Frame x:Class="TamilTv.Presentation.Templates.LoadingView"
       xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       IsVisible="{Binding Path=BindingContext.IsBusy, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
       Style="{StaticResource FrameLoadingStyle}">

    <ActivityIndicator IsRunning="{Binding Path=BindingContext.IsBusy, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                       IsVisible="{Binding Path=BindingContext.IsBusy, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                       Style="{StaticResource ActivityIndicatorLoadingStyle}" />
</Frame>